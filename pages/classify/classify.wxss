/* pages/classify/classify.wxss */
@import "../index/index.wxss";
.search.classify{
  width:68%;
  margin-left: 32%
}
.scroll-view {
  height: 100vh;
  display: inline-block;
  width: 32%;
  background: #f5f5f5;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
}

.nav-name {
  width: 90%;
  display: flex;
  padding: 40rpx 20rpx;
}

.nav-name.nav-hover {
  background: #fff;
  border-left: 3px solid #acd22d;
  border-bottom: 2px solid #acd22d;
  color: #000;
}

.items {
  float: left;
  width: 50%;
  text-align: center;
}

.items image {
  width: 160rpx;
  height: 160rpx;
}

.nav_right {
/*右侧盒子使用了绝对定位*/
  position: absolute;
  top: 100rpx;
  right: 0;
  flex: 1;
  width: 68%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  min-height: 100vh;
}

.classNav_img {
  width: 50rpx;
  height: 50rpx;
}